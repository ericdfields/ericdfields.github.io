---
import { Image } from "astro:assets";
import Logo from "@/images/logo1.png";
---

<header class="relative z-20" id="header">
  <nav class="absolute z-30" id="nav" style="display: none;">
    <ul class="flex flex-col items-center align-middle justify-center">
      <li>
        <a href="/about">About</a>
      </li>
      <li>
        <a href="/services">Services</a>
      </li>
      <li>
        <a href="/contact">Contact</a>
      </li>
    </ul>
  </nav>
  <a href="#" class="relative z-40 block p-8" data-nav-toggle>
    <Image
      src={Logo}
      alt="Logo for Creative Outcomes"
      class="logo-image max-w-[66%] mx-auto"
    /></a
  >
</header>

<style>
  nav {
    width: 100%;
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 1);
    text-align: center;
    height: 100vh;
  }
  nav ul {
    width: 100%;
    height: 100%;
  }
  nav li {
    display: block;
    width: 100%;
  }
  nav a {
    font-size: 8rem;
    font-weight: 300;
  }
</style>

<script>
  const navToggle = document.querySelector("[data-nav-toggle]");
  navToggle.addEventListener("click", (event) => {
    event.preventDefault();
    const nav = document.querySelector("#nav");
    nav.style.display = nav.style.display === "none" ? "block" : "none";
  });
</script>
