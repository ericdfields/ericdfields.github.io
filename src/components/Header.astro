---
import { useState } from "react";
import { Image } from "astro:assets";
import Logo from "@/images/logo1.png";
---

<header class="relative z-20" id="header">
  <nav class="absolute z-30" id="nav" style="display: none;">
    <ul class="">
      <li>
        <a href="/about">About</a>
      </li>
      <li>
        <a href="/services">Services</a>
      </li>
      <li>
        <a href="/contact">Contact</a>
      </li>
    </ul>
  </nav>
  <a href="#" class="relative z-40 block p-8" onclick="toggleNav()">
    <Image
      src={Logo}
      alt="Logo for Creative Outcomes"
      class="logo-image max-w-[66%] mx-auto"
    /></a
  >
</header>

<style>
  nav {
    width: 100%;
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 1);
    text-align: center;
    height: 100vh;
  }
  nav ul {
    display: block;
    width: 100%;
  }
  nav li {
    display: block;
    width: 100%;
  }
  nav a {
    font-size: 8rem;
    font-weight: 300;
  }
  function toggleNav() {
    const nav = document.getElementById('nav');
    if (nav.style.display === 'none' || nav.style.display === '') {
      nav.style.display = 'flex';
    } else {
      nav.style.display = 'none';
    }
  }
</style>
